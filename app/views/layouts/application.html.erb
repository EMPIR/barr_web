<!DOCTYPE html>
<html>
<head>
  <title>Barr Restoration, LLC <%= if title = yield(:title); "#{title}"; end %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>


</head>
<body>
	<div id="body-container">
		<header>
			<div class="container">
				<div id="logo">
					<%= link_to image_tag('/images/logo.png'), root_url %>
				</div> <!-- end div id="logo" -->
				<nav id="main-menu-container" class="menu-container">
					<ul id="main-menu">
						<li class="home"><%= link_to 'home', root_url %></li>
						<li class="expertise"><%= link_to 'expertise', expertise_index_path %></li>
						<li class="about"><%= link_to 'about', about_index_path %></li>
						<li class="contact"><%= link_to 'contact', contact_index_path %></li>
					</ul> <!-- end ul id="main-menu" class="level-1" -->
				</nav> <!-- nav id="main-menu-container" class="menu-container" -- >
			</div> <!-- end div class="container" -->
		</header>
		<%= yield %>
	</div> <!-- end div id="body-container" -->
</body>
</html>
